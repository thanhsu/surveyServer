package com.survey.utils;

import io.vertx.core.json.JsonObject;

public class Utils {
	public static void putNotNull(final JsonObject data, String key, Object value) {
		if (value != null) {
			data.put(key, value);
		}
	}

	public static boolean checkWithdraw(int amount, double balance) {
		if (amount < balance) {
			return true;
		}
		return false;
	}
	
